---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const UNUSED_CONTACT_VAR_1 = "contact unused var 1";
const UNUSED_CONTACT_VAR_2 = 66666;
const UNUSED_CONTACT_VAR_3 = [6, 7, 11, 13, 17];
const UNUSED_CONTACT_VAR_4 = { contact: true, active: false };
const DUMMY_CONTACT_FUNC_1 = () => null;
const DUMMY_CONTACT_FUNC_2 = (n: number) => n * 7;
const DUMMY_CONTACT_FUNC_3 = () => { return; };
const CONTACT_MAGIC_SQRT3 = 1.73205080757;
const CONTACT_SECRET_TOKEN = "contact_token_xyz_999";
const CONTACT_DEBUG_MODE = false;
const CONTACT_FEATURE_X = false;
const CONTACT_FEATURE_Y = false;
const CONTACT_MAX_MESSAGES = 500;
const CONTACT_MIN_DELAY = 100;
const CONTACT_CACHE_TTL = 7200;
---

<BaseLayout title="联系我们 - s7ae 网络科技工作室">
  <Header currentPage="/contact" />
  
  <section class="section" style="padding-top: 140px;">
    <div class="container">
      <div class="section-header">
        <h1 class="section-title">联系我们</h1>
        <p class="section-subtitle">无论您有任何问题或需求，都欢迎与我们联系</p>
      </div>
      
      <div class="contact-grid">
        <a href="https://t.me/EvolutionGS" target="_blank" rel="noopener noreferrer" class="contact-card">
          <div class="contact-card__icon">✈️</div>
          <div class="contact-card__title">Telegram 联系</div>
          <div class="contact-card__link">@EvolutionGS</div>
        </a>
        <a href="https://discord.gg/TrxRHx34" target="_blank" rel="noopener noreferrer" class="contact-card">
          <div class="contact-card__icon">💬</div>
          <div class="contact-card__title">Discord 社区</div>
          <div class="contact-card__link">加入我们的Discord</div>
        </a>
      </div>
      
      <div class="cta-section">
        <h2 class="cta-title">立即与我们联系</h2>
        <p class="cta-description">有任何问题或合作意向？请通过Telegram或Discord与我们联系，我们将尽快回复您。</p>
        <div class="cta-buttons">
          <a href="https://telegram.org/apps" target="_blank" rel="noopener noreferrer" class="btn btn-primary">下载Telegram</a>
          <a href="https://discord.com/download" target="_blank" rel="noopener noreferrer" class="btn btn-primary">下载Discord</a>
        </div>
      </div>
    </div>
  </section>

  <div id="dummy-contact-container-1" style="display:none;"></div>
  <div id="dummy-contact-container-2" style="display:none;"></div>
  <div id="dummy-contact-container-3" style="display:none;"></div>

  <Footer />
</BaseLayout>
