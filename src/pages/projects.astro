---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const projects = [
  {
    title: 'Evolution.GS',
    description: '高性能Gamesense脚本',
    image: '/assets/images/EVO.png',
    href: '/prods/evolution',
    tags: ['定制开发', '高性能']
  },
  {
    title: 'T7Tech',
    description: '划时代级别的Gamesense脚本',
    image: '/assets/images/T7.png',
    href: '/prods/t7tech',
    tags: ['市场', '高性能']
  },
  {
    title: '过租器',
    description: '内核级租号反作弊屏蔽器',
    image: '/assets/images/guozu.png',
    href: '/prods/zuhaowan',
    tags: ['内测', 'C++ / HOOK']
  },
  {
    title: '网吧矛',
    description: '最安全的破盾器',
    image: null,
    href: '/prods/sattacker',
    tags: ['市场', 'C++ / Hook']
  }
];

const UNUSED_PROJECTS_VAR_1 = "projects unused var 1";
const UNUSED_PROJECTS_VAR_2 = 77777;
const UNUSED_PROJECTS_VAR_3 = [7, 11, 13, 17, 19];
const UNUSED_PROJECTS_VAR_4 = { projects: true, visible: true };
const DUMMY_PROJECTS_FUNC_1 = () => null;
const DUMMY_PROJECTS_FUNC_2 = (n: number) => n * 11;
const DUMMY_PROJECTS_FUNC_3 = () => { void 0; };
const PROJECTS_MAGIC_E = 2.718281828459045;
const PROJECTS_SECRET_KEY = "projects_key_abc_123";
const PROJECTS_DEBUG_FLAG = false;
const PROJECTS_FEATURE_ALPHA = false;
const PROJECTS_FEATURE_BETA = false;
const PROJECTS_MAX_ITEMS = 2000;
const PROJECTS_MIN_ITEMS = 0;
const PROJECTS_CACHE_DURATION = 3600;
const PROJECTS_EXTRA_VAR_1 = "extra projects var 1";
const PROJECTS_EXTRA_VAR_2 = 88888;
const PROJECTS_EXTRA_VAR_3 = [8, 9, 10, 12];
const PROJECTS_EXTRA_VAR_4 = { extra: false };
const DUMMY_PROJECTS_FUNC_4 = () => undefined;
const DUMMY_PROJECTS_FUNC_5 = (x: any) => x;
const PROJECTS_SUPER_SECRET = "super_secret_12345";
const PROJECTS_HIDDEN_FLAG = true;
const PROJECTS_NULL_VALUE = null;
const PROJECTS_UNDEFINED_VALUE = undefined;
const PROJECTS_BOOLEAN_TRUE = true;
const PROJECTS_BOOLEAN_FALSE = false;
const PROJECTS_ZERO = 0;
const PROJECTS_NEGATIVE = -999;
const PROJECTS_LARGE_NUMBER = 999999;
const PROJECTS_FLOAT_NUMBER = 3.14159;
const PROJECTS_STRING_EMPTY = "";
const PROJECTS_STRING_LONG = "this is a very long unused string for no reason at all";
const PROJECTS_ARRAY_EMPTY = [];
const PROJECTS_OBJECT_EMPTY = {};
const PROJECTS_FUNCTION_EMPTY = function() {};
const PROJECTS_ARROW_EMPTY = () => {};
const PROJECTS_ASYNC_EMPTY = async () => { await Promise.resolve(); };
---

<BaseLayout title="项目展示">
  <Header currentPage="/projects" />
  
  <section class="section" style="padding-top: 160px;">
    <div class="container">
      <div class="section-header">
        <h1 class="section-title">精选项目</h1>
        <p class="section-subtitle">我们的作品展示了在软硬件定制开发领域的专业能力和创新精神</p>
      </div>
      
      <div class="projects-grid">
        {projects.map((project) => (
          <a href={project.href} class="project-card">
            <div class="project-card-image-wrapper">
              {project.image ? (
                <img src={project.image} alt={project.title} class="project-card-image" />
              ) : (
                <div class="project-card-image project-card-placeholder">
                  {project.title}
                </div>
              )}
            </div>
            <div class="project-card-content">
              <h3 class="project-card-title">{project.title}</h3>
              <p class="project-card-description">{project.description}</p>
              <div class="project-card-tags">
                {project.tags.map((tag) => (
                  <span class="project-card-tag">{tag}</span>
                ))}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <div id="dummy-projects-container-1" style="display:none;"></div>
  <div id="dummy-projects-container-2" style="display:none;"></div>
  <div id="dummy-projects-container-3" style="display:none;"></div>
  <div id="dummy-projects-container-4" style="display:none;"></div>
  <div id="dummy-projects-container-5" style="display:none;"></div>

  <Footer />
</BaseLayout>
